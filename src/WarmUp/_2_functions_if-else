// How functions work in JavaScript
/*
Function is a block of code which performs a specific task
We can define a function once and can use it multiple times
*/
function printHelloWorld(){
    console.log("Hello, World!");
}
printHelloWorld();  // Hello, World!

// We can reuse the function multiple times

function greet(name){  // name is a parameter
    console.log("Hello, " + name + "!");
}
greet("Alice"); // Hello, Alice!
greet("Bob");   // Hello, Bob!
let x = "Charlie";
greet(x);       // Hello, Charlie!


// Task Add two numbers
function sum(a,b){
    let add = a + b;
    console.log(add);
}
sum(3,4) // 3,4 are arguments

// Task Multiply Two number
function multiply(a,b){
    let product = a * b;
    console.log(product);
}
multiply(5,6); // 30

function square(x){
    let result = x * x;
    return result
}
let ans = square(7); // 49
console.log(ans); // 49

/*
Function is a blank box
    ---> We give input to the function (arguments)
    ---> and returning an output which we want
*/



// How if -else works in JavaScript

/* create a function which accepts the age and tells whether the person is eligible to vote or not*/
function eligibleToVote(age){
    if(age < 18){
        console.log("Not Eligible to Vote");
    }else{
        console.log("Eligible to Vote");
    }
}

eligibleToVote(16); // Not Eligible to Vote
eligibleToVote(20); // Eligible to Vote 
eligibleToVote(18); // Eligible to Vote

function inValidAgeForVote(age){
    if(age < 0){
        console.log("Invalid Inout");
    }else if(age< 18){
        console.log("Not Eligible to Vote");
    }else{
        console.log("Eligible to Vote");
    }
}
inValidAgeForVote(-5); // Invalid Input
inValidAgeForVote(15); // Not Eligible to Vote
inValidAgeForVote(25); // Eligible to Vote

// Create a function to check if a number  is Even or Odd
function evenOdd(num){
	let remainder = num % 2 
	if(remainder === 0) console.log("The given number is even")
	else console.log("The given number is odd")
}
evenOdd(3);   
evenOdd(4);